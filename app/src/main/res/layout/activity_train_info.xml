<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.TrainInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/trainName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="28sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/trainDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="28sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/trainSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="28sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/occupiedSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="28sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/occupancyRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="28sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/seatCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="28sp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/manageLineButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Line"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/deleteTrain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Train"
            android:textColor="#FFFFFF"
            android:backgroundTint="#B71C1C"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>